<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:maxads="http://schemas.applovin.com/android/1.0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- MaxAdView para MREC -->
    <com.applovin.mediation.ads.MaxAdView
        android:id="@+id/ad_view_mrec"
        maxads:adUnitId="517c584092b995ac"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@android:color/white" />

    <!-- MaxAdView para o Banner -->
    <com.applovin.mediation.ads.MaxAdView
        android:id="@+id/ad_view_banner"
        maxads:adUnitId="adc3e6945188b9d9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/slider_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:visibility="visible" />

        <SeekBar
            android:id="@+id/slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:thumb="@drawable/ic_custom_thumb" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:visibility="visible" />
    </LinearLayout>

    <!-- Título do Poll -->
    <TextView
        android:id="@+id/poll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- Descrição do Poll -->
    <TextView
        android:id="@+id/poll_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

</FrameLayout>
